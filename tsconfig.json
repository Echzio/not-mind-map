{
  "include": ["packages/client/*.ts", "packages/server/*.ts", "packages/types/**/*.d.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "client/*": ["packages/client/src/*"],
      "server/*": ["packages/server/src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "postcssOptions": {
            "useConfig": true
          }
        }
      }
    ]
  }
}
