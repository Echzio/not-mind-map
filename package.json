{
  "name": "not-mind-map",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "client:dev": "yarn lerna run dev --scope=@not-mind-map/client",
    "client:build": "yarn lerna run build --scope=@not-mind-map/client",
    "server:dev": "yarn lerna run dev --scope=@not-mind-map/server",
    "server:build": "yarn lerna run build --scope=@not-mind-map/server",
    "dev": "yarn client:dev && yarn server:dev",
    "build": "yarn client:build && yarn server:build",
    "lint": "yarn lerna run lint",
    "new-version": "yarn lerna version --conventional-commits --yes"
  },
  "devDependencies": {
    "lerna": "^6.1.0",
    "@commitlint/cli": "17.4.1",
    "@commitlint/config-conventional": "17.4.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "prettier": "2.8.0",
    "globals": "13.18.0",
    "stylelint": "14.16.0",
    "stylelint-config-css-modules": "4.1.0",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard": "29.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.3",
    "typescript-plugin-css-modules": "4.1.1",
    "@types/node": "18.11.13",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@types/webpack": "5.28.0",
    "@types/webpack-dev-server": "4.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint",
      "yarn test --passWithNoTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write",
      "stylelint"
    ]
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional",
    "rules": {
      "scope-empty": [
        2,
        "never"
      ],
      "body-max-line-length": [
        2,
        "always",
        200
      ],
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  }
}
